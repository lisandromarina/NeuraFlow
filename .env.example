# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/mydatabase

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Frontend Configuration
FRONTEND_URL=http://localhost:5173

# JWT Authentication
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Google OAuth Redirect URIs
GOOGLE_AUTH_REDIRECT_URI=http://localhost:8000/auth/google/callback
GOOGLE_REDIRECT_URI=http://localhost:8000/google/oauth2callback

# Credentials Encryption Key (base64 encoded 32-byte key)
# Generate with: python -c "import base64; import os; print(base64.b64encode(os.urandom(32)).decode())"
CREDENTIALS_SECRET_KEY=your-base64-encoded-32-byte-key
